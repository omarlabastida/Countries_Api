<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.CountryFeatures">

    <TextView
        android:id="@+id/titleSup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="TextView"
        android:textColor="#057cb7"
        android:textSize="15sp"
        android:fontFamily="@font/gothaprobol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"

        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/img_like"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="180dp"
        app:layout_constraintTop_toBottomOf="@+id/titleSup"
        />

    <TextView
        android:id="@+id/titleInf"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="TextView"
        android:textColor="#057cb7"
        android:textSize="12sp"
        android:fontFamily="@font/gothambookregular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"

        />
</androidx.constraintlayout.widget.ConstraintLayout>